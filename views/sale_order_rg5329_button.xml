<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add RG5329 button to Sale Order form -->
        <record id="sale_order_form_rg5329_button" model="ir.ui.view">
            <field name="name">sale.order.form.rg5329.button</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="apply_rg5329_manual_button"
                            type="object"
                            string="Apply RG5329 Tax"
                            class="btn-primary"
                            invisible="state not in ('draft', 'sent')"
                            help="Apply Argentine RG5329 tax perception if conditions are met"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>