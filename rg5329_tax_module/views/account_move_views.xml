<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_form_rg5329" model="ir.ui.view">
            <field name="name">account.move.form.rg5329</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Agregar información de percepción después del total de impuestos -->
                <xpath expr="//field[@name='amount_tax']" position="after">
                    <div class="oe_subtotal_footer_separator" style="margin-top: 5px;">
                        <strong>Percepción RG 5329: <field name="rg5329_perception_amount" nolabel="1" readonly="1"/></strong>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
