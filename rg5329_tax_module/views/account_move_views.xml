<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_form_rg5329" model="ir.ui.view">
            <field name="name">account.move.form.rg5329</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Cambiar "Impuestos Internos" por "Percepción RG 5329" -->
                <xpath expr="//label[@class='o_form_label o_tax_total_label']" position="replace">
                    <label class="o_form_label o_tax_total_label">Percepción RG 5329</label>
                </xpath>
                
                <!-- Agregar información de percepción en el total -->
                <xpath expr="//field[@name='amount_total']" position="after">
                    <field name="rg5329_perception_amount" string="Percepción RG 5329" 
                           modifiers='{"invisible": [["rg5329_perception_amount", "=", 0]]}'
                           readonly="1" style="font-weight: bold;"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
