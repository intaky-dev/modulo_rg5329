<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_tax_form_rg5329" model="ir.ui.view">
            <field name="name">account.tax.form.rg5329</field>
            <field name="model">account.tax</field>
            <field name="inherit_id" ref="account.view_tax_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <group string="RG 5329"
                           modifiers='{"invisible": [["type_tax_use", "!=", "sale"]]}'>
                        <field name="is_rg5329_perception"/>
                        <field name="rg5329_perception_type"
                               modifiers='{"invisible": [["is_rg5329_perception", "=", false]],
                                            "required": [["is_rg5329_perception", "=", true]]}'/>
                        <field name="rg5329_product_categories"
                               widget="many2many_tags"
                               modifiers='{"invisible": [["is_rg5329_perception", "=", false]]}'/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
